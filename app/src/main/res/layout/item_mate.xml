<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/mate_profile_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@drawable/mypage_test_profile_image"
            app:civ_border_color="@color/lightGrey"
            app:civ_border_overlay="true"
            app:civ_border_width="1dp" />

        <TextView
            android:id="@+id/mate_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="mateName"
            android:textColor="@color/darkGrey"
            android:textSize="30px"
            android:textStyle="normal" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/mate_review_button"
            android:layout_width="50dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:layout_marginVertical="3dp"
            android:background="@drawable/mypage_round_layout"
            android:backgroundTint="@color/darkGrey"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:text="평가하기"
            android:textColor="@color/white"
            android:textSize="20px"
            android:textStyle="bold" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>